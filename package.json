{
  "name": "nodejs-express-js-mongodb-typescript-2023-boilerplate",
  "version": "1.0.0",
  "description": "TypeScript + Mongoose + MongoDB + Express API Server",
  "scripts": {
    "start:prod": "npm-run-all build && cross-env NODE_ENV=production node dist/server.js",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev --poll -r tsconfig-paths/register src/server.ts",
    "start:debug": "cross-env NODE_ENV=development ts-node-dev --inspect --poll -r tsconfig-paths/register src/server.ts",
    "start:staging": "npm-run-all build && cross-env NODE_ENV=staging node dist/server.js",
    "build": "tsc && tsc-alias",
    "docker:dev": "docker compose -f docker-compose.dev.yml --env-file .env.development up --build",
    "docker:prod": "docker compose -f docker-compose.yml --env-file .env.production up --build",
    "docker:staging": "docker compose -f docker-compose.yml --env-file .env.staging up --build",
    "prebuild": "rimraf dist"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.5",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.10.3",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "node-config": "^0.0.2",
    "node-gyp": "^9.1.0",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.3.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  }
}
