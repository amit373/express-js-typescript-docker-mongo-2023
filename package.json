{
  "name": "nodejs-express-js-mongodb-typescript-2023-boilerplate",
  "version": "1.0.0",
  "description": "TypeScript + Mongoose + MongoDB + Express API Server",
  "scripts": {
    "start:prod": "npm-run-all build && cross-env NODE_ENV=production node dist/server.js",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev --poll -r tsconfig-paths/register src/server.ts",
    "start:debug": "cross-env NODE_ENV=development ts-node-dev --inspect --poll -r tsconfig-paths/register src/server.ts",
    "build": "tsc && tsc-alias",
    "docker:dev": "docker compose -f docker-compose.dev.yml --env-file .env.development up --build",
    "docker:prod": "docker compose -f docker-compose.yml --env-file .env.production up --build",
    "prebuild": "rimraf dist",
    "clean": "rimraf node_modules dist package-lock.json yarn.lock",
    "prepare": "husky install && chmod ug+x .husky/*",
    "test": "cross-env NODE_ENV=development jest --forceExit --detectOpenHandles",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "format:write": "npx prettier --write \"src/**/*\" --ignore-path ./.prettierignore",
    "format:check": "npx prettier --check \"src/**/*\" --ignore-path ./.prettierignore"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-angular": "^18.4.3",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.5",
    "@types/i18next": "^13.0.0",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.10.6",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "node-config": "^0.0.2",
    "node-gyp": "^9.1.0",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.3.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "i18next": "^23.7.11",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-middleware": "^3.5.0",
    "reflect-metadata": "^0.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsyringe": "^4.8.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  }
}
